{
  "author": "Ben Coe <ben@npmjs.com>",
  "browser": "./dist/mjs/browser.js",
  "description": "when you want to fire an event no matter how a process exits.",
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^18.15.11",
    "@types/signal-exit": "^3.0.1",
    "@types/tap": "^15.0.8",
    "c8": "^7.13.0",
    "prettier": "^2.8.6",
    "tap": "^16.3.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/mjs/index.js",
        "types": "./dist/mjs/index.d.ts"
      },
      "require": {
        "default": "./dist/cjs/index.js",
        "types": "./dist/cjs/index.d.ts"
      }
    },
    "./browser": {
      "import": {
        "default": "./dist/mjs/browser.js",
        "types": "./dist/mjs/browser.d.ts"
      },
      "require": {
        "default": "./dist/cjs/browser.js",
        "types": "./dist/cjs/browser.d.ts"
      }
    },
    "./signals": {
      "import": {
        "default": "./dist/mjs/signals.js",
        "types": "./dist/mjs/signals.d.ts"
      },
      "require": {
        "default": "./dist/cjs/signals.js",
        "types": "./dist/cjs/signals.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "funding": {
    "url": "https://github.com/sponsors/isaacs"
  },
  "keywords": [
    "signal",
    "exit"
  ],
  "license": "ISC",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "name": "signal-exit",
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 75,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tapjs/signal-exit.git"
  },
  "scripts": {
    "format": "prettier --write . --loglevel warn",
    "postversion": "npm publish",
    "prepare": "tsc -p tsconfig.json && tsc -p tsconfig-esm.json && bash ./scripts/fixup.sh",
    "preprepare": "rm -rf dist",
    "prepublishOnly": "git push origin --follow-tags",
    "presnap": "npm run prepare",
    "pretest": "npm run prepare",
    "preversion": "npm test",
    "snap": "c8 tap",
    "test": "c8 tap",
    "typedoc": "typedoc --tsconfig tsconfig-esm.json ./src/*.ts"
  },
  "tap": {
    "coverage": false,
    "jobs": 1,
    "node-arg": [
      "--no-warnings",
      "--loader",
      "ts-node/esm"
    ],
    "ts": false
  },
  "types": "./dist/mjs/index.d.ts",
  "version": "4.1.0"
}
